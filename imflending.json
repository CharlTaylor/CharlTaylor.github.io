       "axis": {
         "title": null,
         "grid": false,
         "ticks": false,
         "labelAngle": 45}},

      "y": {
        "field": "totals (billions)",
        "type": "quantitative",
        "title": "Outstanding debt (billions)",
        "axis": {"grid": false}}
}
